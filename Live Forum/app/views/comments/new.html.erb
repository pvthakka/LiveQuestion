<%= link_to "Back", posts_path %>
<%title "Add comment"%>

<h2>Commenting on Post:</h2>
<h3>
<p><%= @current_post.message %></p>
</h3>
<%= form_for @new_comment do |f| %>
    <div id="new_post_form">
      <h3><%= f.label :comment %></h3>
      <%= text_area_tag :comment, params[:comment]%>
    </div>
    <div>
    <%= hidden_field_tag :post_id, @current_post.id %>
    </div>
    <div id="submit_button_container">
      <%= f.submit "", :class => "button"%>
    </div>
    <div class="clear"></div>
    </div>
<%- end -%>